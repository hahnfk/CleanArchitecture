<UserControl x:Class="CleanArchitecture.Presentation.Wpf.Views.TodosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CleanArchitecture.Presentation.Wpf.Views"
             xmlns:conv="clr-namespace:CleanArchitecture.Presentation.Wpf.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Converter baut (TaskId, NewTitle) für den Command -->
        <conv:RenameParamConverter x:Key="RenameParamConverter"/>
    </UserControl.Resources>

    <DockPanel Margin="10">
        <!-- Input + Add command -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Width="300" Margin="0,0,8,0" Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Add" Width="80" Command="{Binding AddCommand}"/>
        </StackPanel>

        <!-- Simple list -->
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <!-- EDITABLE TITLE -->
                    <GridViewColumn Header="Title" Width="320">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Zwei-Wege-Binding damit die TextBox den aktuellen Titel zeigt -->
                                    <TextBox x:Name="TitleEditor" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter"
                                                        Command="{Binding DataContext.RenameTodoCommand, RelativeSource={RelativeSource AncestorType=ListView}}">
                                                <KeyBinding.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource RenameParamConverter}">
                                                        <Binding Path="Id"/>
                                                        <Binding ElementName="TitleEditor" Path="Text"/>
                                                    </MultiBinding>
                                                </KeyBinding.CommandParameter>
                                            </KeyBinding>
                                        </TextBox.InputBindings>
                                    </TextBox>

                                    <!-- Rename löst UseCase aus mit (Id, TitleEditor.Text) -->
                                    <Button Content="Rename"
                                            Command="{Binding DataContext.RenameTodoCommand, RelativeSource={RelativeSource AncestorType=ListView}}">
                                        <Button.CommandParameter>
                                            <MultiBinding Converter="{StaticResource RenameParamConverter}">
                                                <Binding Path="Id"/>
                                                <!-- Item Id -->
                                                <Binding ElementName="TitleEditor" Path="Text"/>
                                                <!-- neuer Titel -->
                                            </MultiBinding>
                                        </Button.CommandParameter>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Done?" Width="60" DisplayMemberBinding="{Binding IsCompleted}"/>

                    <GridViewColumn Header="Actions" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Complete"
                                        Command="{Binding DataContext.CompleteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding Id}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
